@model IEnumerable<BilimveTeknolojiHaberSitesi.Models.Yorumlar>

@{
    ViewData["Title"] = "Yorumlar";
    Layout = "~/Views/Shared/_YonetimTema.cshtml";
}


    @using (Html.BeginForm())
    {


        <div class="form-group">
            <label for="onay" class="form-text">Filtrele</label>
            <select id="listelemeturu" name="listelemeturu" class="form-control">
                <option value="Tumu">Tümü</option>
                <option value="Onayli">Onaylı</option>
                <option value="Onaysiz">Onaysız</option>
            </select>
        </div>
        <input type="submit" value="listele" class="btn btn-primary" />


    }

    <table class="table">
        <thead>
            <tr>
                <th>
                    Yorum
                </th>
                <th>
                    Tarih
                </th>
                <th>
                    Aktif
                </th>

                <th>
                    Yorum sahibi
                </th>
                <th>
                    Makale
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Yorum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tarih)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aktif)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Kul.Adı)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Makale.Baslik)
                    </td>
                    <td>
                        <a asp-action="Onayla" asp-route-id="@item.YorumId">Onayla/Gizle</a> |
                        |
                        <a asp-action="YorumSil" asp-route-id="@item.YorumId">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
  