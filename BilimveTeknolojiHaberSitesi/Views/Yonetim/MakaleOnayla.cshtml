@model BilimveTeknolojiHaberSitesi.Models.Makaleler

@{
    ViewData["Title"] = "MakaleOnayla";
    Layout = "~/Views/Shared/_YonetimTema.cshtml";
}
<script src="https://cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
<h1>MakaleOnayla</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="MakaleOnayla">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="MakaleId" />
            <div class="form-group">
                <label asp-for="Baslik" class="control-label"></label>
                <input asp-for="Baslik" class="form-control" readonly />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icerik" class="control-label"></label>
                <textarea asp-for="Icerik" name="Icerik" readonly></textarea>
                <script>

                    CKEDITOR.replace( 'Icerik' );
                </script>
                <span asp-validation-for="Icerik" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Sira" class="control-label"></label>
                <input asp-for="Sira" class="form-control" />
                <span asp-validation-for="Sira" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="Aktif" class="control-label">Onayla</label>
                <select asp-for="Aktif" class="form-control">
                    <option value="True">Evet</option>
                    <option value="False">Hayır</option>
                </select>
                <span asp-validation-for="Aktif" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Onayla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TumMakaleler">Geri</a>
</div>

