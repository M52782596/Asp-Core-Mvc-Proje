@model BilimveTeknolojiHaberSitesi.Models.Kullanicilar

@{
    ViewData["Title"] = "YazarOl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<hr />

    
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">

                <div class="col-lg-6 mt-lg-0 mt-5 contact-center">
                    <form asp-action="Yazarlik_Basvuru" class="signin-form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Adı" class="control-label"></label>
                            <input type="text" name="Adı" id="Adı" class="contact-input" />
                            <span asp-validation-for="Adı" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Soyadı" class="control-label"></label>
                            <input type="text" name="Soyadı" id="Soyadı" class="contact-input" />
                            <span asp-validation-for="Soyadı" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Eposta" class="control-label"></label>
                            <input type="text" name="Eposta" id="Eposta" class="contact-input" />
                            <span asp-validation-for="Eposta" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Parola" class="control-label"></label>
                            <input type="password" name="Parola" id="Parola" class="contact-input" />
                            <span asp-validation-for="Parola" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Gönder" class="btn btn-style btn-secondary" />
                        </div>
                        <div class="alert-danger">
                            <label class="control-label">@TempData["Yazarmesaji"]</label>
                        </div>
                    </form>



                </div>


            </div>


        </div>
    </div>
    <div>
        <a href="/Home/index">Anasayfa'ya Dön</a>
    </div>
</section>
   





